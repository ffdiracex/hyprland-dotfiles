#!/bin/bash

# Define the directory to search for music files
MUSIC_DIR="/run/media/saqib/New Volume/Music"

# Function to check if a command is available
command_exists() {
  command -v "$1" >/dev/null 2>&1
}

# Check if rofi is installed, use it if available, otherwise use fzf
if command_exists rofi; then
  # Use rofi to select a music file
  selected_file=$(find "$MUSIC_DIR" -type f \( -name "*.mp3" -o -name "*.flac" -o -name "*.wav" \) | rofi -dmenu -i -p "Select a music file:")
else
  # Use fzf if rofi is not available
  selected_file=$(find "$MUSIC_DIR" -type f \( -name "*.mp3" -o -name "*.flac" -o -name "*.wav" \) | fzf)
fi

# Check if a file was selected
if [[ -n "$selected_file" ]]; then
  # Use mpv to play the selected file
  mpv "$selected_file"
fi

